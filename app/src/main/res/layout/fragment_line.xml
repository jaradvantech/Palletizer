<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.administrator.Palletizer.Line">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/line_progressBar_pallet1"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:layout_marginStart="328dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/line_progressBar_pallet2"
            style="@style/CustomProgressBarHorizontal"
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:layout_marginStart="360dp"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toEndOf="@+id/line_progressBar_pallet1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/line_imageview_frame"
            android:layout_width="978px"
            android:layout_height="510px"
            android:src="@mipmap/top_transp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:text="test"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/line_imageview_guide"
            android:layout_width="197px"
            android:layout_height="511px"
            android:layout_marginStart="408dp"
            android:src="@mipmap/guide"
            app:layout_constraintStart_toStartOf="@+id/line_imageview_frame"
            app:layout_constraintTop_toTopOf="@+id/line_imageview_frame" />

        <ImageView
            android:id="@+id/line_imageview_clamp"
            android:layout_width="195px"
            android:layout_height="98px"
            android:layout_marginBottom="68dp"
            android:layout_marginStart="561dp"
            android:src="@mipmap/clamp"
            app:layout_constraintBottom_toBottomOf="@+id/line_imageview_guide"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Pallet 1: "
            app:layout_constraintBottom_toBottomOf="@+id/line_progressBar_pallet1"
            app:layout_constraintEnd_toEndOf="@+id/line_progressBar_pallet1"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintStart_toStartOf="@+id/line_progressBar_pallet1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Pallet 2:"
            app:layout_constraintEnd_toEndOf="@+id/line_progressBar_pallet2"
            app:layout_constraintStart_toStartOf="@+id/line_progressBar_pallet2"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
